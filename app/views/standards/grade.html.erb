<form action="/standards/:subject/:grade" method="get">
  <fieldset>
    <legend>Grade</legend>
    <label>Please Choose a Grade</label>
    <select name=":grade">
      <% @grade_list.each do |grade| %>
        <option><%= grade %></option>
      <% end %>
    </select>
    <input type="hidden" name=":subject" value=<%= @subject %>>
    <input type="submit" value="Submit">
  </fieldset>
</form>

